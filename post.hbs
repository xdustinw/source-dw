{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="gh-main">

    <article class="gh-article {{post_class}}">

        <header class="gh-article-header gh-canvas">

            {{#if primary_tag}}
                <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
            {{/if}}
            <h1 class="gh-article-title is-title">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="gh-article-excerpt is-body">{{custom_excerpt}}</p>
            {{/if}}

            {{#if @custom.show_post_metadata}}
            <div class="gh-article-meta">
                <div class="gh-article-author-image instapaper_ignore">
                    {{#foreach authors}}
                        {{#if profile_image}}
                            <a href="{{url}}">
                                <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                            </a>
                        {{else}}
                            <a href="{{url}}">{{> "icons/avatar"}}</a>
                        {{/if}}
                    {{/foreach}}
                </div>
                <div class="gh-article-meta-wrapper">
                    <h4 class="gh-article-author-name">{{authors}}</h4>
                    <div class="gh-article-meta-content">
                        <time class="gh-article-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
                        {{#if reading_time}}
                            <span class="gh-article-meta-length"><span class="bull">â€”</span> {{reading_time}}</span>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/if}}

            {{> "feature-image"}}

        </header>

        <section class="gh-content gh-canvas is-body{{#if @custom.enable_drop_caps_on_posts}} drop-cap{{/if}}">
            {{content}}
        </section>

    </article>



    {{#if comments}}
        <div class="gh-comments gh-canvas">
            {{comments}}
        </div>
    {{/if}}

</main>

{{!-- {{#get "posts" include="authors" filter="authors:[{{authors[*].slug}}]+id:-{{id}}" limit="1" as |other_post|}}
    {{#if other_post}} --}}
    <section class="gh-container is-grid gh-outer">
        <div class="gh-container-inner gh-inner">
            {{!-- <h2 class="gh-container-title">Previous &amp; Next</h2> --}}
            <main class="gh-main">
                <div class="gh-feed" style="grid-template-columns: repeat(2, 1fr);">
                {{!--Ghost's #previous_post and #next_post does not limit to current author, hence query previous/next manually here --}}
                {{#get "posts" include="authors" filter="tag:{{primary_tag.slug}}+authors:[{{authors[*].slug}}]+published_at:<'{{published_at}}'" order='published_at desc' limit="1" as |previous|}}
                    {{#if previous}}
                        {{#foreach previous}}
                            {{> "post-card" lazyLoad=true header_title="Previous"}}
                        {{/foreach}}
                    {{/if}}
                {{/get}}
                {{#get "posts" include="authors" filter="tag:{{primary_tag.slug}}+authors:[{{authors[*].slug}}]+published_at:>'{{published_at}}'" order='published_at asc' limit="1" as |next|}}
                    {{#if next}}
                        {{#foreach next}}
                            {{> "post-card" lazyLoad=true header_title="Next"}}
                        {{/foreach}}
                    {{/if}}
                {{/get}}
                {{!--
                {{#prev_post}}
                    {{> "post-card" lazyLoad=true}}
                {{/prev_post}}
                {{#next_post}}
                    {{> "post-card" lazyLoad=true}}
                {{/next_post}}
                --}}
                </div>
            </main>
        </div>
    </section>
    {{!-- {{/if}}
{{/get}} --}}
{{/post}}

{{#if @custom.show_related_articles}}
    {{#get "posts" include="authors,tags" filter="(tag:{{post.primary_tag.slug}},authors:[{{post.authors[*].slug}}])+id:-{{post.id}}" order='published_at desc' limit="4" as |related|}}
        {{#if related}}
            <section class="gh-container is-grid gh-outer">
                <div class="gh-container-inner gh-inner">
                    <h2 class="gh-container-title">Read more</h2>
                    <div class="gh-feed">
                        {{#foreach related}}
                            {{> "post-card" lazyLoad=true}}
                        {{/foreach}}
                    </div>
                </div>
            </section>
        {{/if}}
    {{/get}}
{{/if}}
